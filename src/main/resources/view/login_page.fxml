         <children>
            <ImageView fitHeight="696.0" fitWidth="693.0" layoutX="24.0" layoutY="34.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../img/Mesa%20de%20trabajo%201.png" />
               </image>
            </ImageView>

